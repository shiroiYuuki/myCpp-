{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "compile file c++",
            "type": "shell",
            // ini untuk mac dan linux
            // "command": "clang++",
            // "args": [
            //     "-std=c++17",
            //     "${file}",
            //     "-c",
            //     "-o",
            //     ".\\bin\\object\\${fileBasenameNoExtension}.o"
            // ]

            // ini untuk windows
            "command": "g++",
            "args": [
                "-std=c++17",
                "${file}",
                "-c",
                "-o",
                ".\\bin\\object\\${fileBasenameNoExtension}.o"
            ]
        },
        {
            "label":"build",
            "type":"shell",
            "command": "g++",
            "args": [
                "-std=c++17",
                "./bin/object/**.o",
                "-o",
                ".\\bin\\App.exe"
            ]
        },
        {
            "label":"run",
            "type":"shell",
            "command":"./bin/App.exe",
        },
        {
            "label": "All build C++",
            "type": "shell",
            "command": "g++",
            "args": [
                "-std=c++17",
                ".\\src\\**.cpp",
                "-o",
                ".\\bin\\Main.exe"
            ]
        },
        {
            "label":"run + all build",
            "type":"shell",
            "command":".\\bin\\Main.exe",
            "dependsOn":["All build C++"],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}